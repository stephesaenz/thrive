<h1>Welcome to Thrive</h1>
<p>Here we strive to help you advance your visual arts!</p>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <div class="card">
      	<div class="card-body">
        <% if product.image.url.nil? == false %>
          <p><%= image_tag product.image.url %></p>
        <% end %>
        <h3 class="card-title"><%= link_to product.name, product %></h3>
        <p class="card-text"><%= number_to_currency product.price %></p>
        <p>
          <a href="#" data-toggle = "modal" data-target="#myModal_<%= product.id %>">
            <span class="glyphicon glyphicon-plus"></span> Quick Info
          </a>
        </p>
      </div>
  	 </div>
    </div>

	<div class="modal fade" id="myModal_<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	      	<h3><%= product.name %></h3>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
	      </div>
	      <div class="modal-body">
	        <% if product.image.url.nil? == false %>
	          <p><%= image_tag product.image.url, class: "storefront-pics" %></p>
	        <% end %>
	        <p><%= link_to product.name, product %></p>
	        <p><%= number_to_currency product.price %></p>
	      </div>
	      <div class="modal-footer">
	        <p>
	          <%= form_tag add_to_cart_path do %>
          <%= hidden_field_tag :product_id, product.id %>
          <%= submit_tag "Add to Cart", class: "btn btn-primary" %>
        <% end %>
	        </p>
	      </div>
	    </div>
	  </div>
	</div>

  <% end %>
</div>



